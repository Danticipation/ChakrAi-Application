{
  "name": "TraI - Mental Wellness Companion",
  "short_name": "TraI",
  "description": "AI-powered mental wellness and therapy companion with voice interaction, mood tracking, and therapeutic support",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0a0e1a",
  "theme_color": "#3f51b5",
  "orientation": "portrait-primary",
  "categories": ["health", "wellness", "medical"],
  "lang": "en",
