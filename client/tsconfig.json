{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/*"] // Explicitly add shared path
    }
  },
  "include": ["src", "../shared"]
}
