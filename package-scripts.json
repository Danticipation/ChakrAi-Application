{
  "scripts": {
    "lint": "eslint server client --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint server client --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "quality:full": "npm run lint && npm run format && npm run type-check",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "test:performance": "node --inspect server/utils/performanceTest.js",
    "db:migrate": "npm run db:push",
    "backup:create": "node scripts/backup.js",
    "logs:server": "tail -f logs/server.log",
    "health:check": "curl -f http://localhost:5000/health || exit 1"
  }
}