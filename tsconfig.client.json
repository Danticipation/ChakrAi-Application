{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true
  },
  "include": ["client/**/*", "types/**/*", "server/**/*"]
}
